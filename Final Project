document.getElementById("navAbout").onclick = showAbout;
document.getElementById("navContact").onclick = showContact;

let homeScrollPos = 0;

function showHome(){
  hideAll();
  homeView.style.display = "block";
  // restore scroll position
  window.scrollTo(0, homeScrollPos);
}

// store scroll before leaving home
function hideAll(){
  if(homeView.style.display !== "none"){
    homeScrollPos = window.scrollY;
  }
  homeView.style.display = "none";
  provinceView.style.display = "none";
  detailView.style.display = "none";
  aboutView.style.display = "none";
  contactView.style.display = "none";
  backFromInner.style.display = "none";
}


function showAbout(){
  hideAll();
  aboutView.style.display = "block";
}

function showContact(){
  hideAll();
  contactView.style.display = "block";
}


/* --------------------------
   PROVINCE CLICK
---------------------------*/
document.querySelectorAll(".province-card").forEach(card => {
  card.onclick = () => openProvince(card.dataset.province);
});

/* --------------------------
   OPEN PROVINCE
---------------------------*/
function openProvince(key){
  const p = DATA[key];
  currentProvince = key;

  provinceTitle.textContent = p.title;
  provinceSubtitle.textContent = p.subtitle;

// Province Backgrounds
const provinceBackgrounds = {
  "zamboanga-del-norte": "Home.jpeg", 
  "bukidnon": "Home.jpeg",
  "lanao-del-norte": "Home.jpeg"
};

// Taglines
const provinceTaglines = {
  "zamboanga-del-norte": "Beaches, culture, and Dakak Resort",
  "bukidnon": "Highlands, pine forests, and adventure",
  "lanao-del-norte": "Known for its majestic waterfalls and rich culture"
};

// Set background
document.getElementById("provinceView").style.backgroundImage =
  `url('${provinceBackgrounds[key]}')`;

// Insert text
document.getElementById("selectedProvinceName").textContent = p.title;
document.getElementById("selectedProvinceTagline").textContent = provinceTaglines[key];

  spotsRow.innerHTML = "";
  p.spots.forEach(s => {
    const col = document.createElement("div");
    col.className = "col-md-4";
    col.innerHTML = `
      <div class="spot-card p-2 shadow-sm" data-id="${s.id}">
        <div style="height:230px; background-size:cover; background-image:url('${s.images[0]}'); border-radius:6px;"></div>
        <h5 class="mt-2">${s.title}</h5>
        <p class="small text-muted">${s.short}</p>
      </div>
    `;
    col.onclick = () => openSpot(key, s.id);
    spotsRow.appendChild(col);
  });

  hideAll();
  provinceView.style.display = "block";
  backFromInner.style.display = "block";
}

/* --------------------------
   OPEN SPOT
---------------------------*/
function openSpot(provinceKey, spotId){
  const province = DATA[provinceKey];
  const spot = province.spots.find(s => s.id === spotId);

  currentSpot = spotId;

  detailProvinceBadge.textContent = province.title;
  detailTitle.textContent = spot.title;
  detailDescription.textContent = spot.description;
  detailLocation.textContent = spot.location;

  mainImage.style.backgroundImage = `url('${spot.images[0]}')`;

  ["thumb0","thumb1","thumb2"].forEach((id,i)=>{
    const img = document.getElementById(id);
    img.src = spot.images[i];
    img.onclick = () => mainImage.style.backgroundImage = `url('${spot.images[i]}')`;
  });

  bottomSpots.innerHTML = "";
  province.spots.forEach(s=>{
    const col = document.createElement("div");
    col.className = "col-md-4";
    col.innerHTML = `
      <div class="p-2 border rounded" style="${s.id===spotId ? "background:#f0f0f0" : ""}">
        <img src="${s.images[0]}" style="width:100%; height:100px; object-fit:cover;">
        <p class="small mt-1 mb-0"><strong>${s.title}</strong></p>
      </div>
    `;
    col.onclick = () => openSpot(provinceKey, s.id);
    bottomSpots.appendChild(col);
  });

  hideAll();
  detailView.style.display = "block";
}

/* --------------------------
   BACK BUTTON FIX
---------------------------*/
backFromInner.onclick = () => {
  if (detailView.style.display === "block") {
    // Go back to province view without re-creating DOM
    detailView.style.display = "none";
    provinceView.style.display = "block";
    return;
  }

  if (provinceView.style.display === "block") {
    // Simply show home without touching the grid
    provinceView.style.display = "none";
    detailView.style.display = "none";
    homeView.style.display = "block";
    backFromInner.style.display = "none"; // hide back button
    document.getElementById("homeProvinces").style.display = "flex"; // ensure grid is visible
    return;
  }
};

backToProvince.onclick = () => {
  hideAll();
  provinceView.style.display = "block";
  backFromInner.style.display = "block";
}




// CONTACT FORM EMAILJS
document.getElementById("sendMessageBtn").onclick = () => {
  const name = document.getElementById("contactName").value;
  const email = document.getElementById("contactEmail").value;
  const message = document.getElementById("contactMessage").value;

  if(!name || !email || !message){
    alert("Please fill all fields before sending.");
    return;
  }

  const templateParams = {
    from_name: name,
    from_email: email,
    message: message
  };

  emailjs.send("service_c2o9ehy", "template_j0q4nsl", templateParams)
    .then(function(response) {
       alert("Message sent successfully! ✅");
       // Clear form
       document.getElementById("contactName").value = "";
       document.getElementById("contactEmail").value = "";
       document.getElementById("contactMessage").value = "";
    }, function(error) {
       alert("Oops! Something went wrong. ❌", error);
    });
};


}; // END window.onload
</script>

</body>
</html>

